            <TextBlock x:Name="itemDescription" Margin="10,452,71,0" TextWrapping="Wrap" Text="Item Description" VerticalAlignment="Top" Foreground="#1B5E20" FontSize="24.667" FontWeight="Bold"/>
            <Button x:ConnectionId='1' x:Name="deleteAddBut" Content="Delete Advert" HorizontalAlignment="Stretch" Margin="16,978,112,0" VerticalAlignment="Top" Background="#FFFF3131" FontSize="24" RenderTransformOrigin="0.5,0.544"                           />
