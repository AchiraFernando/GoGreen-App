            <Image x:Name="addImage" HorizontalAlignment="Left" Height="228" Margin="25,201,0,0" VerticalAlignment="Top" Width="292"/>
            <!--<ListView x:Name="listView" HorizontalAlignment="Left" Height="565" Margin="0,65,0,0" VerticalAlignment="Top" Width="400"/>-->
            <TextBlock x:Name="title" Margin="20,132,61,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="Black" FontSize="18" Height="43"/>
