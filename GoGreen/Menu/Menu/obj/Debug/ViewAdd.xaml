    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    x:Class="Menu.ViewAdd"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer HorizontalAlignment="Left" Height="640" VerticalAlignment="Top" Width="400" Margin="0,0.333,0,-0.333">
        <Grid Background="White" Height="1163">
            <Rectangle Fill="#1B5E20" Height="66" Margin="0,-1,0,0" Stroke="#1B5E20" VerticalAlignment="Top"/>
