            <Maps:MapControl Name ="sellerMap" HorizontalAlignment="Left" Margin="8,771,0,0" VerticalAlignment="Top" Height="270" Width="386" MapServiceToken="f_9YJRuc43K7UkGUVymEpQ"/>
            <Button x:ConnectionId='1' x:Name="directionsBut" Content="Directions From Here" HorizontalAlignment="Stretch" Margin="10,1062,118,0" VerticalAlignment="Top" Background="#1B5E20" FontSize="24"                          RenderTransformOrigin="0.5,0.544"/>
            <ProgressRing Name="mapProgressRing" HorizontalAlignment="Left" Margin="10,755,0,-382" VerticalAlignment="Top" Width="386" Height="270"/>
            <TextBlock x:Name="itemDescription" Margin="10,452,71,0" TextWrapping="Wrap" Text="Item Description" VerticalAlignment="Top" Foreground="#1B5E20" FontSize="24.667" FontWeight="Bold"/>

        </Grid>
    </ScrollViewer>
</Page>

