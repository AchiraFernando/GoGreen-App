            <TextBlock x:Name="itemInfo" Margin="10,86,71,0" TextWrapping="Wrap" Text="Item details" VerticalAlignment="Top" Foreground="#1B5E20" FontSize="24.667" FontWeight="Bold"/>
            <!--<ProgressRing Name="ProgressRing" HorizontalAlignment="Left" Margin="6,752,0,0" VerticalAlignment="Top" Height="288" Width="389"/>-->
            <Image x:Name="addImage" HorizontalAlignment="Left" Height="228" Margin="25,201,0,0" VerticalAlignment="Top" Width="292"/>
            <!--<ListView x:Name="listView" HorizontalAlignment="Left" Height="565" Margin="0,65,0,0" VerticalAlignment="Top" Width="400"/>-->
            <TextBlock x:Name="title" Margin="20,132,61,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="Black" FontSize="18" Height="43"/>
            <TextBlock x:Name="description" Margin="16,502,65,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="Black" FontSize="18" Height="69"/>
            <TextBlock x:Name="sellerInfo" Margin="10,600,71,0" TextWrapping="Wrap" Text="Seller's contact details" VerticalAlignment="Top" Foreground="#1B5E20" FontSize="24.667" FontWeight="Bold"/>
