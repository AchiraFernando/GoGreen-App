<Page
    x:Class="Menu.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Menu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource AppBarItemForegroundThemeBrush}">


    <Page.Resources>
        <Style x:Key="LayoutGridStyle" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/Images/background.jpg"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>


    <Grid x:Name="LayoutRoot"  Style="{StaticResource LayoutGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="95*"/>
            <RowDefinition/>
            <RowDefinition Height="224*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Images/background.jpg"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="263*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <!--<Image Source="/Images/background.jpg" Margin="-2,43,0,0" Stretch="Fill" Grid.ColumnSpan="2"/>-->
        <Rectangle Fill="#FF4ADA13" Margin="0,-26,-2,126" Stroke="Black" Grid.ColumnSpan="3"/>
        <Button x:ConnectionId='1' x:Name="button" HorizontalAlignment="Stretch" Margin="10,124,10,0" VerticalAlignment="Top" Height="136" Background="#FF42A492" Foreground="#FF42B018" BorderBrush="#FF1BDC08" FontSize="29.333" FontFamily="Segoe WP SemiLight" Grid.ColumnSpan="2"                      FontWeight="Bold" Opacity="0.25" Grid.RowSpan="3"/>
        <Button x:ConnectionId='2' x:Name="button1" HorizontalAlignment="Stretch" Margin="10,104.5,10,0" VerticalAlignment="Top" Height="140"                       Background="#FF42A492" Foreground="White" BorderBrush="#FF1BDC08" FontSize="29.333" FontFamily="Segoe WP SemiLight" Grid.ColumnSpan="2" Opacity="0.25" Grid.Row="2"/>
        <Button x:Name="button2" Content="" HorizontalAlignment="Stretch" Margin="10,280.5,10,0" VerticalAlignment="Top" Height="134" Background="#FF42A492" Foreground="White" BorderBrush="#FF1BDC08" FontSize="26.667" FontFamily="Segoe WP SemiLight" Grid.ColumnSpan="2" Opacity="0.25" Grid.Row="2"/>
        <Image Source="/Images/logo.png" Margin="6,0,31.333,139"/>
        <TextBlock x:ConnectionId='3' x:Name="textBlock" TextWrapping="Wrap" Text="Explore" Foreground="#FFF9F9F9" Margin="144,169,82,413" Grid.ColumnSpan="2" FontSize="32"                                                 FontFamily="Berlin Sans FB Demi" Grid.RowSpan="3"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock1" TextWrapping="Wrap" Text="Post Adds" Foreground="#FFF9F9F9" Margin="124,152.333,102,238" Grid.ColumnSpan="2" FontSize="32"                                                 FontFamily="Berlin Sans FB Demi" Grid.Row="2"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock2" TextWrapping="Wrap" Text="View My Adds" Foreground="#FFF9F9F9" Margin="98,321.333,81,69" Grid.ColumnSpan="2" FontSize="32"                                                 FontFamily="Berlin Sans FB Demi" Grid.Row="2"/>

    </Grid>






</Page>

